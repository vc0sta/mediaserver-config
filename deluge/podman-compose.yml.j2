---
version: "2.1"
services:
  deluge:
    image: ghcr.io/linuxserver/deluge
    container_name: deluge
    environment:
      - PUID=1000
      - PGID=1000
      - TZ={{ timezone }}
      - DELUGE_LOGLEVEL=info
    volumes:
      - './config:/config'
      - {{ storage_path }}/downloads:/downloads
    ports:
      - 58846:58846
      - 8112:8112
    restart: unless-stopped
    dns:
      - 8.8.8.8
      - 8.8.4.4

networks:
  default:
    external:
      name: {{ container_network_name }}

