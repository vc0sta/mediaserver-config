version: "3.5"
services:
  jellyfin:
    image: jellyfin/jellyfin
    container_name: jellyfin
    volumes:
      - "./config:/config"
      - "./cache:/cache"
      - "./css:/jellyfin/jellyfin-web/assets/css"
      - {{ storage_path }}:/media
    restart: "unless-stopped"
    environment:
      - JELLYFIN_PublishedServerUrl=http{{ 's' if use_ssl else '' }}://{{ server_url }}
      - UID=1000
      - GID=1000
    ports:
      - 8096:8096
      - 1900:1900
      - 7359:7359
    dns:
      - 8.8.8.8
      - 8.8.4.4

networks:
  default:
    external:
      name: {{ container_network_name }}
